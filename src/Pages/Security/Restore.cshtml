@page
@model WebUI.Pages.Security.RestoreModel
@{
    ViewData["Title"] = "数据还原";
}

<h2 class="mb-4">数据还原</h2>

<div class="card">
    <div class="card-body">
        <form method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="file" class="form-label">选择备份ZIP文件</label>
                <input class="form-control" type="file" id="file" name="file" accept=".zip" required>
                <div class="form-text">
                    仅允许还原白名单文件：accounts.db、identity.db(及wal/shm)、Data/reminder_records.db、appsettings.json、appsettings.Development.json。
                    还原后建议重启应用。
                </div>
            </div>
            <button type="submit" class="btn btn-warning">
                <i class="fas fa-upload me-1"></i>开始还原
            </button>
            <a asp-page="/Index" class="btn btn-secondary ms-2">返回首页</a>
        </form>

        @if (!string.IsNullOrEmpty(Model.ResultMessage))
        {
            <div class="alert alert-info mt-3">@Model.ResultMessage</div>
        }
    </div>
    
</div>


