<!DOCTYPE html>
<html lang="zh-cn">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - 账号资源管理系统</title>
    
    <!-- Bootstrap 5 CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <!-- AdminLTE CSS -->
    <link rel="stylesheet" href="~/lib/admin-lte/css/adminlte.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
        <!-- 导航栏 -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- 左侧导航栏 -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button">
                        <i class="fas fa-bars"></i>
                    </a>
                </li>
            </ul>

            <!-- 右侧导航栏 -->
            <ul class="navbar-nav ms-auto">
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-user me-1"></i>
                            @(User.Identity.Name ?? "用户")
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" asp-page="/Account/ChangePassword">
                                <i class="fas fa-user-cog me-2"></i>个人设置
                            </a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="/Account/Logout">
                                <i class="fas fa-sign-out-alt me-2"></i>退出登录
                            </a></li>
                        </ul>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Account/Login">
                            <i class="fas fa-sign-in-alt me-1"></i>登录
                        </a>
                    </li>
                }
            </ul>
        </nav>

        <!-- 侧边栏 -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- 品牌Logo -->
            <a href="/" class="brand-link">
                <i class="fas fa-key brand-image"></i>
                <span class="brand-text fw-light">账号资源管理</span>
            </a>

            <!-- 侧边栏菜单 -->
            <div class="sidebar">
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <!-- 首页 -->
                        <li class="nav-item">
                            <a asp-page="/Index" class="nav-link">
                                <i class="nav-icon fas fa-home"></i>
                                <p>首页</p>
                            </a>
                        </li>

                        <!-- 账号管理 -->
                        <li class="nav-item">
                            <a asp-page="/Accounts/Index" class="nav-link">
                                <i class="nav-icon fas fa-key"></i>
                                <p>账号管理</p>
                            </a>
                        </li>

                        <!-- 提醒管理 -->
                        <li class="nav-item">
                            <a asp-page="/Reminders/Index" class="nav-link">
                                <i class="nav-icon fas fa-bell"></i>
                                <p>提醒管理</p>
                            </a>
                        </li>

                        <!-- 提醒历史 -->
                        <li class="nav-item">
                            <a asp-page="/ReminderRecords/Index" class="nav-link">
                                <i class="nav-icon fas fa-history"></i>
                                <p>提醒历史</p>
                            </a>
                        </li>

                        <!-- 笔记管理 -->
                        <li class="nav-item">
                            <a asp-page="/Notes/Index" class="nav-link">
                                <i class="nav-icon fas fa-sticky-note"></i>
                                <p>笔记管理</p>
                            </a>
                        </li>

                        <!-- 网站管理 -->
                        <li class="nav-item has-treeview">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-globe"></i>
                                <p>
                                    网站管理
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a asp-page="/Websites/Index" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>网站列表</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-page="/Servers/Index" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>服务器管理</p>
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <!-- 系统设置 -->
                        <li class="nav-item" id="settingsMenu" style="display: none;">
                            <a asp-page="/Settings/Index" class="nav-link">
                                <i class="nav-icon fas fa-cog"></i>
                                <p>系统设置</p>
                            </a>
                        </li>

                        <!-- 任务调度 -->
                        <li class="nav-item" id="hangfireMenu" style="display: none;">
                            <a asp-page="/HangfireSettings/Index" class="nav-link">
                                <i class="nav-icon fas fa-tasks"></i>
                                <p>任务调度</p>
                            </a>
                        </li>

                        <!-- 管理员菜单 -->
                        <li class="nav-header">管理员功能</li>
                        <li class="nav-item" id="adminMenu" style="display: none;">
                            <a asp-page="/Admin/Users/Index" class="nav-link">
                                <i class="nav-icon fas fa-users"></i>
                                <p>用户管理</p>
                            </a>
                        </li>
                        <li class="nav-item" id="adminSettingsMenu" style="display: none;">
                            <a asp-page="/Admin/Settings" class="nav-link">
                                <i class="nav-icon fas fa-cogs"></i>
                                <p>系统管理</p>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>

        <!-- 内容区域 -->
        <div class="content-wrapper">
            <!-- 内容头部 -->
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1 class="m-0">@ViewData["Title"]</h1>
                        </div>
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-end">
                                <li class="breadcrumb-item"><a href="/">首页</a></li>
                                <li class="breadcrumb-item active">@ViewData["Title"]</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>

            <!-- 主要内容 -->
            <section class="content">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </section>
        </div>

        <!-- 页脚 -->
        <footer class="main-footer">
            <div class="float-end d-none d-sm-block">
                <b>版本</b> 1.0.0
            </div>
            <strong>Copyright &copy; 2024 <a href="/">账号资源管理系统</a>.</strong>
            保留所有权利。
        </footer>
    </div>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Bootstrap 5 -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/js/adminlte.min.js"></script>
    <!-- SignalR -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.min.js"></script>
    <!-- Custom Scripts -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
