@page
@model WebUI.Pages.Account.LogoutModel
@{
    ViewData["Title"] = "退出登录";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-sign-out-alt"></i>
                        退出登录
                    </h3>
                </div>
                <div class="card-body">
                    <p>您确定要退出登录吗？</p>
                    
                    <form method="post">
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-sign-out-alt"></i>
                            确认退出
                        </button>
                        <a href="/" class="btn btn-secondary">
                            <i class="fas fa-home"></i>
                            返回首页
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
