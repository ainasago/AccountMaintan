@page
@model IndexModel
@{
    ViewData["Title"] = "首页";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0">
                    <i class="fas fa-tachometer-alt me-2"></i>系统概览
                </h1>
                <div>
                    <a href="/Accounts/Create" class="btn btn-primary me-2">
                        <i class="fas fa-plus me-1"></i>新增账号
                    </a>
                    <a href="/Reminders/Index" class="btn btn-outline-warning">
                        <i class="fas fa-bell me-1"></i>查看提醒
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- 统计卡片 -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col me-2">
                            <div class="text-xs fw-bold text-primary text-uppercase mb-1">
                                总账号数
                            </div>
                            <div class="h5 mb-0 fw-bold text-gray-800">@Model.TotalAccounts</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-key fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col me-2">
                            <div class="text-xs fw-bold text-success text-uppercase mb-1">
                                正常账号
                            </div>
                            <div class="h5 mb-0 fw-bold text-gray-800">@Model.ActiveAccounts</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col me-2">
                            <div class="text-xs fw-bold text-warning text-uppercase mb-1">
                                需要提醒
                            </div>
                            <div class="h5 mb-0 fw-bold text-gray-800">@Model.AccountsNeedingReminder</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-exclamation-triangle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-danger shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col me-2">
                            <div class="text-xs fw-bold text-danger text-uppercase mb-1">
                                超期账号
                            </div>
                            <div class="h5 mb-0 fw-bold text-gray-800">@Model.OverdueAccounts</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-times-circle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 快速操作和最近活动 -->
    <div class="row">
        <!-- 快速操作 -->
        <div class="col-lg-6 mb-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 fw-bold text-primary">
                        <i class="fas fa-bolt me-2"></i>快速操作
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-6 mb-3">
                            <a href="/Accounts/Create" class="btn btn-outline-primary w-100">
                                <i class="fas fa-plus me-2"></i>新增账号
                            </a>
                        </div>
                        <div class="col-6 mb-3">
                            <a href="/Accounts/Import" class="btn btn-outline-success w-100">
                                <i class="fas fa-upload me-2"></i>批量导入
                            </a>
                        </div>
                        <div class="col-6 mb-3">
                            <a href="/Accounts/Export" class="btn btn-outline-info w-100">
                                <i class="fas fa-download me-2"></i>导出数据
                            </a>
                        </div>
                        <div class="col-6 mb-3">
                            <div class="btn-group w-100">
                                <a href="/Security/Backup" class="btn btn-outline-warning">
                                    <i class="fas fa-database me-2"></i>数据备份
                                </a>
                                <a href="/Security/Restore" class="btn btn-outline-danger">
                                    <i class="fas fa-rotate-left me-2"></i>数据还原
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- 最近活动 -->
        <div class="col-lg-6 mb-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 fw-bold text-primary">
                        <i class="fas fa-history me-2"></i>最近活动
                    </h6>
                </div>
                <div class="card-body">
                    @if (Model.RecentActivities.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var activity in Model.RecentActivities.Take(5))
                            {
                                <div class="list-group-item d-flex justify-content-between align-items-center border-0 px-0">
                                    <div>
                                        <small class="text-muted">@activity.ActivityTime.ToString("MM-dd HH:mm")</small>
                                        <div class="small">@activity.Description</div>
                                    </div>
                                    <span class="badge bg-primary rounded-pill">@activity.Account.Name</span>
                                </div>
                            }
                        </div>
                        <div class="text-center mt-3">
                            <a href="/Accounts/Activities" class="btn btn-sm btn-outline-primary">查看全部</a>
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted py-4">
                            <i class="fas fa-inbox fa-3x mb-3"></i>
                            <p>暂无活动记录</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- 需要提醒的账号 -->
    @if (Model.AccountsNeedingReminder > 0)
    {
        <div class="row">
            <div class="col-12">
                <div class="card shadow">
                    <div class="card-header py-3 bg-warning">
                        <h6 class="m-0 fw-bold text-white">
                            <i class="fas fa-bell me-2"></i>养号提醒
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>账号名称</th>
                                        <th>用户名</th>
                                        <th>最后访问</th>
                                        <th>超期天数</th>
                                        <th>操作</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var account in Model.AccountsNeedingReminderList)
                                    {
                                        var daysSinceLastVisit = account.LastVisited.HasValue 
                                            ? (DateTime.Now - account.LastVisited.Value).TotalDays 
                                            : 0;
                                        <tr>
                                            <td>
                                                <strong>@account.Name</strong>
                                                @if (!string.IsNullOrEmpty(account.Category))
                                                {
                                                    <span class="badge bg-secondary ms-2">@account.Category</span>
                                                }
                                            </td>
                                            <td>@account.Username</td>
                                            <td>
                                                @if (account.LastVisited.HasValue)
                                                {
                                                    <span class="text-muted">@account.LastVisited.Value.ToString("yyyy-MM-dd HH:mm")</span>
                                                }
                                                else
                                                {
                                                    <span class="text-warning">从未访问</span>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge bg-danger">@Math.Round(daysSinceLastVisit) 天</span>
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    <a href="@account.Url" target="_blank" class="btn btn-outline-primary btn-sm">
                                                        <i class="fas fa-external-link-alt me-1"></i>访问
                                                    </a>
                                                    <button class="btn btn-outline-success btn-sm" onclick="recordVisit('@account.Id')">
                                                        <i class="fas fa-check me-1"></i>记录
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="text-center mt-3">
                            <a href="/Reminders/Index" class="btn btn-warning">查看全部提醒</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script src="~/js/dashboard.js"></script>
}
